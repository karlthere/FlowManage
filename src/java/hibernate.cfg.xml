<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/flow_manage?zeroDateTimeBehavior=convertToNull&amp;useSSL=false&amp;autoReconnect=TRUE&amp;allowPublicKeyRetrieval=true</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password"></property>
    <mapping class="com.model.pojo.Task"/>
    <mapping class="com.model.pojo.Status"/>
    <mapping class="com.model.pojo.Project"/>
    <mapping class="com.model.pojo.User"/>
  </session-factory>
</hibernate-configuration>
